\mode<presentation>

% Define Colours
\definecolor{polimiblue}{RGB}{114,143,165}
\definecolor{glassgrey}{rgb}{220,220,220}

% Set Colours
\setbeamercolor{title}{parent=polimiblue}
\setbeamercolor{title}{fg=polimiblue}
\setbeamercolor{subtitle}{parent=polimiblue}
\setbeamercolor{author}{parent=glassgrey}
\setbeamercolor{date}{parent=polimiblue}
\setbeamercolor{institute}{parent=polimiblue}

\setbeamercolor{section title}{parent=polimiblue}
\setbeamercolor{subsection title}{parent=polimiblue}
\setbeamercolor{frametitle}{parent=polimiblue}
\setbeamercolor{background canvas}{parent=polimiblue}
\setbeamercolor{structure}{fg=polimiblue}

\setbeamercolor{normal text}{fg=black!97}

\setbeamercolor{footnote}{fg=black!97}
\setbeamercolor{page number in head/foot}{fg=polimiblue}

\mode
<all>